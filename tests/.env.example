# Test Environment Configuration
# Copy this file to .env and update the values as needed

# Base API URL
BASE_URL=http://localhost:8080

# Test User Credentials
USER_EMAIL=testuser@errandshop.com
USER_PASSWORD=password123

# Admin Credentials
ADMIN_EMAIL=admin@errandshop.com
ADMIN_PASSWORD=admin123

# Test Data
TEST_PHONE=+1234567890
TEST_PRODUCT_NAME=Test Product
TEST_PRODUCT_SKU=TEST-001
TEST_CATEGORY=Electronics

# API Endpoints for reference
# Auth: /api/v1/auth/*
# Products: /api/v1/products/*
# Admin Products: /api/v1/admin/products/*
# Orders: /api/v1/orders/*
# Admin Orders: /api/v1/admin/orders/*
# Users: /api/v1/admin/users/*

# Test Configuration
TEST_TIMEOUT=30
TEST_RETRIES=3
VERBOSE_OUTPUT=true

# Database (for integration tests)
TEST_DB_HOST=localhost
TEST_DB_PORT=5432
TEST_DB_NAME=errand_shop_test
TEST_DB_USER=postgres
TEST_DB_PASSWORD=password

# JWT Secret (should match server config)
JWT_SECRET=your-super-secret-jwt-key-here

# Email Service (for testing email functionality)
TEST_EMAIL_PROVIDER=resend
TEST_EMAIL_API_KEY=your-test-email-api-key

# File Upload (for testing image uploads)
TEST_UPLOAD_DIR=./test_uploads
TEST_MAX_FILE_SIZE=5MB

# Payment Testing (for payment integration tests)
TEST_PAYMENT_PROVIDER=test_provider
TEST_PAYMENT_PUBLIC_KEY=pk_test_your_public_key
TEST_PAYMENT_SECRET_KEY=sk_test_your_secret_key

# Delivery Testing
TEST_DELIVERY_PROVIDER=test_logistics
TEST_DELIVERY_API_KEY=test_delivery_key

# Rate Limiting (for testing rate limits)
TEST_RATE_LIMIT_REQUESTS=100
TEST_RATE_LIMIT_WINDOW=60

# Logging
TEST_LOG_LEVEL=debug
TEST_LOG_FILE=./tests/test.log